- title 'Home'
.dashboard.row
  - if current_user.has_role? :account_holder
    - current_user.as(:account_holder).accounts.limit(3).all.each do |account|
      %a{:href => account_path(account.id)}
        .col-md-4.col-sm-6
          .box.account.clearfix
            .border
            .title
              = account.name
              .text-muted= "#{account.code} Balance"
            .stat
              %div= fa_icon 'money'
              = number_to_currency account.decorate.balance
            .go
              = account.name
              = fa_icon 'chevron-right'
  - if current_user.has_role? :reviewer
    %a{href: reviews_path}
      .col-md-4.col-sm-6
        .box.pac.clearfix
          .border
          .title
            People & Culture
            .text-muted Due Reviews
          .stat
            %div= fa_icon 'university'
            0
          .go
            People & Culture
            = fa_icon 'chevron-right'
  - if current_user.has_role? :statistician
    %a{href: gma_organizations_path}
      .col-md-4.col-sm-6
        .box.statistics.clearfix
          .border
          .title
            Statistics
            .text-muted Due Reports
          .stat
            %div= fa_icon 'bar-chart-o'
            = current_user.as(:statistician).gma_staff_reports.where(submitted: false).count
          .go
            Statistics
            = fa_icon 'chevron-right'
  - if current_user.has_role? :trainee
    %a{href: dmpd_contacts_path}
      .col-md-4.col-sm-6
        .box.dmpd.clearfix
          .border
          .title
            DMPD
            .text-muted Contacts
          .stat
            %div= fa_icon 'users'
            = current_user.as(:trainee).contacts.count
          .go
            Contacts
            = fa_icon 'chevron-right'
  - unless current_user.has_role? :account_holder
    %a{href: reviews_path}
      .col-md-4.col-sm-6
        .box.empty.clearfix
          .border
          .title
            Accounts
          .stat
            %div= fa_icon 'plus'
            Activate
  - unless current_user.has_role? :reviewer
    %a{href: reviews_path}
      .col-md-4.col-sm-6
        .box.empty.clearfix
          .border
          .title
            People & Culture
          .stat
            %div= fa_icon 'plus'
            Activate
  - unless current_user.has_role? :statistician
    %a{href: gma_organizations_path}
      .col-md-4.col-sm-6
        .box.empty.clearfix
          .border
          .title
            Statistics
          .stat
            %div= fa_icon 'plus'
            Activate
  - unless current_user.has_role? :trainee
    %a{href: dmpd_path}
      .col-md-4.col-sm-6
        .box.empty.clearfix
          .border
          .title
            DMPD
          .stat
            %div= fa_icon 'plus'
            Activate
  - unless current_user.has_role? :player
    %a{href: players_path}
      .col-md-4.col-sm-6
        .box.empty.clearfix
          .border
          .title
            Leaderboard
          .stat
            %div= fa_icon 'plus'
            Activate
  - unless current_user.has_role? :contact
