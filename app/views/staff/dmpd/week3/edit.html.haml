- title "MSP | Taskset 4"
%section.intro-box.margin-80.hidden-print
  .container
    .row
      .span12
        %h3.pull-right.hidden-phone= current_user.name
        %ul.breadcrumb
          %li
            %a{:href => root_path} Home
            %span.divider /
          %li
            %a{:href => staff_dmpd_root_path} DMPD
            %span.divider /
          %li.active
            Taskset 4
        %span.arrow.hidden-phone
.white
  .container
    - flash.each do |key, value|
      %div{class: flash_class(key)}
        = value
    %h2.page-header
      Taskset 4
      - if @week3.confirmed_hr
        %div Confirmed by HR
      - if @week3.confirmed_coach
        %div Confirmed by Coach
    = semantic_form_for @week3, url: staff_dmpd_week3_path, :html => { :multipart => true }, builder: FormtasticBootstrap::FormBuilder do |f|
      = f.inputs do
        .well
          %h4 Tasks
          = f.input :prayer_sheet, :label => "As a group pray through <a target=\"_blank\" href=\"https://docs.google.com/file/d/0B-dq1Hc0jvdBODk4QXlUbEtqejA/edit\">DMPD Prayer Sheet</a>".html_safe
          = f.input :listen_to_attitude_message, :label => "As a group listen to one of the <a target=\"_blank\" href=\"https://docs.google.com/file/d/0B-dq1Hc0jvdBMDZiTUFfeTZkUGM/edit\">Attitude Messages</a> & continue to be more detailed with your notes".html_safe
          = f.input :memorize_prayer_sheet_passage, :label => "Memorize one of the passages from <a target=\"_blank\" href=\"https://docs.google.com/file/d/0B-dq1Hc0jvdBODk4QXlUbEtqejA/edit\">DMPD Prayer Sheet</a>".html_safe
          = f.input :recite_passage_from_dmpd_prayer_sheet, :label => "Recite the passage you memorized from the <a target=\"_blank\" href=\"https://docs.google.com/file/d/0B-dq1Hc0jvdBODk4QXlUbEtqejA/edit\">DMPD Prayer Sheet</a>".html_safe
          = f.input :practice_our_teams_current_financial_needs, :label => "Recite <a target=\"_blank\" href=\"https://docs.google.com/file/d/0B-dq1Hc0jvdBZGhXVzJEZ2VZcTQ/edit\">Our Teams' Financial Need</a>".html_safe
          = f.input :practice_tandems_financial_policy, :label => "Recite <a target=\"_blank\" href=\"https://docs.google.com/file/d/0B-dq1Hc0jvdBdlNXMl9xNTJsa2c/edit\">Tandem's Financial Policy</a>".html_safe
          = f.input :review_how_to_develop_your_ministry_partners, :label => "Review <a target=\"_blank\" href=\"https://docs.google.com/file/d/0B-dq1Hc0jvdBYmJSRnF0S2xxazg/edit\">How to Develop Your Ministry Partners Quickly</a>".html_safe
          = f.input :share_call_testimony, :label => "Share with your group your <strong>2 Minute Call Testimony</strong>".html_safe
          = f.input :share_salvation_testimony, :label => "Share with your group your <strong>2 Minute Salvation Testimony</strong>".html_safe
      = f.actions do
        = f.action :submit, :as => :button, :label => "Save"
      = f.inputs do
        .well
          %h4 Assignments
          = f.input :vision_folder, :label => "Upload Your <strong>Vision Folder</strong> for your coach to review. <small class=\"muted\">5MB Max</small>".html_safe
          - if @week3.vision_folder.exists?
            = link_to "Your Last Upload", @week3.vision_folder.url
      = f.actions do
        = f.action :submit, :as => :button, :label => "Save"