- title "MSP | DMPD Weekly Support Raising Development Chart"
%section.intro-box.margin-80.hidden-print
  .container
    .row
      .span12
        %h3.pull-right.hidden-phone= current_user.name
        %ul.breadcrumb
          %li
            %a{:href => root_path} Home
            %span.divider /
          %li
            %a{:href => staff_dmpd_root_path} DMPD
            %span.divider /
          %li
            %a{:href => staff_dmpd_stats_root_path} WCS
            %span.divider /
          %li.active
            %a{:href => staff_dmpd_stats_support_raising_development_index_path} Weekly Calling Chart
            %span.divider /
          %li.active
            Edit
        %span.arrow.hidden-phone
.white
  .container
    %h3.page-header
      Weekly Calling Chart
      .pull-right
        = link_to "Delete WCC", staff_dmpd_stats_support_raising_development_path(@support_raising_development), class: "btn btn-danger", method: :delete, :confirm => "Are you sure you want to delete this WCC Record?"
    %h5.muted= @support_raising_development.week.name
    = semantic_form_for @support_raising_development, url: staff_dmpd_stats_support_raising_development_path(@support_raising_development), builder: FormtasticBootstrap::FormBuilder do |f|
      = render :partial => "form", :locals => { :f => f }