.page-header.dmpd
  %a.back{href: dmpd_stats_appointment_set_record_index_path}
    = fa_icon 'chevron-left'
  = title "Appointment Set Record"
  .pull-right
    = link_to "Delete ASR", dmpd_stats_appointment_set_record_path(@appointment_set_record), class: "btn btn-danger", method: :delete, :confirm => "Are you sure you want to delete this ASR?"
= semantic_form_for @appointment_set_record, url: dmpd_stats_appointment_set_record_path(@appointment_set_record), builder: FormtasticBootstrap::FormBuilder do |f|
  = render :partial => "form", :locals => { :f => f }
