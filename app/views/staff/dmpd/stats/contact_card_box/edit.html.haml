- title "MSP | DMPD Weekly Support Raising Development Chart"
%section.intro-box.margin-80.hidden-print
  .container
    .row
      .span12
        %h3.pull-right.hidden-phone= current_user.name
        %ul.breadcrumb
          %li
            %a{:href => root_path} Home
            %span.divider /
          %li
            %a{:href => staff_dmpd_root_path} DMPD
            %span.divider /
          %li
            %a{:href => staff_dmpd_stats_root_path} WCS
            %span.divider /
          %li.active
            %a{:href => staff_dmpd_stats_contact_card_box_index_path} Contact Card Box
            %span.divider /
          %li.active
            Edit
        %span.arrow.hidden-phone
.white
  .container
    %h1.page-header
      Contact Card Box
      .pull-right
        = link_to "Delete CCB", staff_dmpd_stats_contact_card_box_path(@contact_card_box), class: "btn btn-danger", method: :delete, :confirm => "Are you sure you want to delete this CCB Record?"
    = semantic_form_for @contact_card_box, url: staff_dmpd_stats_contact_card_box_path(@contact_card_box) do |f|
      = render :partial => "form", :locals => { :f => f }