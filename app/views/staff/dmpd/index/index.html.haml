.page-header.dmpd
  %a.back{href: authenticated_root_path}
    = fa_icon 'chevron-left'
  = title 'DMPD'
.dashboard.row
  .col-sm-4
    %a{href: dmpd_stats_root_path}
      .box.dmpd.clearfix{class: ("success" if current_user.contacts.count >= 30)}
        .border
        .title
          DMPD Statistics
        .stat
          = fa_icon 'bar-chart-o'
        .text Access your personal statistics including appointment set record, contact ratios and summaries.
        .go
          DMPD Statistics
          = fa_icon 'chevron-right'
  .col-sm-4
    %a{href: dmpd_contacts_path}
      .box.dmpd.clearfix{class: ("success" if current_user.contacts.count >= 30)}
        .border
        .title
          Contacts
        .stat
          = fa_icon 'user'
        .text Manage contacts in your primary DMPD location and reduce clashes between you and your staff team.
        .go
          Contacts
          = fa_icon 'chevron-right'
  .col-sm-4
    %a{href: dmpd_taskset_index_path}
      .box.dmpd.clearfix
        .border
        .title
          Tasksets
        .stat
          = fa_icon 'check-circle-o'
        .text Complete all your Pre-DMPD activities here. These will help you prepare for effective DMPD.
        .go
          Tasksets
          = fa_icon 'chevron-right'

